<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.spontune.android.spontune.EventActivity"
    tools:showIn="@layout/activity_event"
    app:layout_constraintTop_toBottomOf="@+id/app_bar">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/location_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/activity_event_location"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/location_image_view"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_view_starting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/location_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:text="@string/starting_time"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/text_view_starting_time"
            app:layout_constraintBottom_toBottomOf="@id/text_view_starting_time"
            app:layout_constraintEnd_toStartOf="@id/event_metadata_starting_time"
            android:src="@drawable/activity_event_time"/>

        <TextView
            android:id="@+id/event_metadata_starting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/image_view_starting_date"
            app:layout_constraintBaseline_toBaselineOf="@id/text_view_starting_time"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/image_view_starting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/text_view_starting_time"
            app:layout_constraintBottom_toBottomOf="@id/text_view_starting_time"
            app:layout_constraintEnd_toStartOf="@+id/event_metadata_starting_date"
            android:src="@drawable/activity_event_date"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/event_metadata_starting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/text_view_starting_time"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_view_ending_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_starting_time"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:text="@string/ending_time"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/text_view_ending_time"
            app:layout_constraintBottom_toBottomOf="@id/text_view_ending_time"
            app:layout_constraintEnd_toStartOf="@id/event_metadata_ending_time"
            android:src="@drawable/activity_event_time"/>

        <TextView
            android:id="@+id/event_metadata_ending_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/image_view_ending_date"
            app:layout_constraintBaseline_toBaselineOf="@id/text_view_ending_time"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/image_view_ending_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/text_view_ending_time"
            app:layout_constraintBottom_toBottomOf="@id/text_view_ending_time"
            app:layout_constraintEnd_toStartOf="@+id/event_metadata_ending_date"
            android:src="@drawable/activity_event_date"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/event_metadata_ending_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/text_view_ending_time"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/text_view_max_persons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_ending_time"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:text="@string/max_persons_title"/>

        <TextView
            android:id="@+id/event_metadata_max_persons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginEnd="12dp"
            app:layout_constraintBaseline_toBaselineOf="@id/text_view_max_persons"
            app:layout_constraintEnd_toStartOf="@id/image_view_max_persons"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/image_view_max_persons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/event_metadata_max_persons"
            app:layout_constraintBottom_toBottomOf="@id/event_metadata_max_persons"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/activity_event_people"/>

        <TextView
            android:id="@+id/text_view_current_persons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_max_persons"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:text="@string/current_persons_title"/>

        <TextView
            android:id="@+id/event_metadata_current_persons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBaseline_toBaselineOf="@id/text_view_current_persons"
            app:layout_constraintEnd_toStartOf="@id/image_view_current_persons"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/image_view_current_persons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/event_metadata_current_persons"
            app:layout_constraintBottom_toBottomOf="@id/event_metadata_current_persons"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/activity_event_people"/>

        <TextView
            android:id="@+id/event_description_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="?attr/actionBarSize"
            app:layout_constraintTop_toBottomOf="@id/event_metadata_current_persons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
