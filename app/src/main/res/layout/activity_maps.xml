<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar_bottom"
        tools:context="de.spontune.android.spontune.MapsActivity" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_bottom"
        android:layout_height="@dimen/category_bar_height"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        android:minHeight="?attr/actionBarSize"
        android:elevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:weightSum="5"
            android:orientation="horizontal"
            android:elevation="15dp">

            <ImageButton
                android:id="@+id/action_category_food_and_drink"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/category_food_and_drink" />

            <ImageButton
                android:id="@+id/action_category_party"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/category_party"/>

            <ImageButton
                android:id="@+id/action_category_music"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/category_music"/>

            <ImageButton
                android:id="@+id/action_category_sports"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/category_sports" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorAccent">

                <ImageButton
                    android:id="@+id/add_event"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_maps_add" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>