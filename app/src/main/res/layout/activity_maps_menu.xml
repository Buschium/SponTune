<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/action_list"
        android:layout_width="@dimen/category_bar_height"
        android:layout_height="@dimen/category_bar_height"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_round_list_light"
        android:background="?android:attr/selectableItemBackground"/>

    <ImageButton
        android:id="@+id/action_user_profile"
        android:layout_width="@dimen/category_bar_height"
        android:layout_height="@dimen/category_bar_height"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitCenter"
        android:src="@drawable/activity_maps_menu_user"
        android:background="?android:attr/selectableItemBackground"/>

</android.support.constraint.ConstraintLayout>