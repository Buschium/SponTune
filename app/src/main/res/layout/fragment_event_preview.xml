<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/surface"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/category_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:elevation="0dp"
                android:scaleType="center"
                android:src="@drawable/ic_round_add_photo"
                android:background="@color/light_grey"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                app:layout_constraintTop_toBottomOf="@id/category_image">

                <Button
                    android:id="@+id/event_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/colorAccent"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:text="@string/join_event"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/event_chat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="25dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_round_chat_light"
                    app:layout_constraintBottom_toBottomOf="@id/event_join"
                    app:layout_constraintEnd_toStartOf="@id/event_share"
                    app:layout_constraintTop_toTopOf="@id/event_join" />

                <ImageButton
                    android:id="@+id/event_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_round_share_light"
                    app:layout_constraintEnd_toStartOf="@id/event_map"
                    app:layout_constraintTop_toTopOf="@id/event_join"
                    app:layout_constraintBottom_toBottomOf="@id/event_join"/>

                <ImageButton
                    android:id="@+id/event_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_round_place_light"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/event_join"
                    app:layout_constraintBottom_toBottomOf="@id/event_join"/>

                <FrameLayout
                    android:id="@+id/description_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/divider"
                    app:layout_constraintTop_toBottomOf="@id/event_join">

                    <TextView
                        android:id="@+id/event_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:maxLines="7"
                        android:textColor="@color/onSurface"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <View
                        android:id="@+id/gradient"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:background="@drawable/transparent_to_light_surface_gradient" />

                </FrameLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/light_grey"
                    app:layout_constraintTop_toBottomOf="@id/description_frame" />

                <TextView
                    android:id="@+id/text_view_starting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/starting_time"
                    android:textColor="@color/onSurface"
                    android:textSize="@dimen/default_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider" />

                <TextView
                    android:id="@+id/event_metadata_starting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/onSurface"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@id/text_view_starting_time"
                    app:layout_constraintStart_toEndOf="@id/text_view_starting_time" />

                <TextView
                    android:id="@+id/event_metadata_starting_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/onSurface"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBaseline_toBaselineOf="@id/text_view_starting_time"
                    app:layout_constraintStart_toEndOf="@id/event_metadata_starting_time" />

                <TextView
                    android:id="@+id/text_view_ending_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/ending_time"
                    android:textColor="@color/onSurface"
                    android:textSize="@dimen/default_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_starting_time" />

                <TextView
                    android:id="@+id/event_metadata_ending_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/onSurface"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@id/text_view_ending_time"
                    app:layout_constraintStart_toEndOf="@id/text_view_ending_time" />

                <TextView
                    android:id="@+id/event_metadata_ending_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/onSurface"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBaseline_toBaselineOf="@id/text_view_ending_time"
                    app:layout_constraintStart_toEndOf="@id/event_metadata_ending_time" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>